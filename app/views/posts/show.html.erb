	<div class = "col-md-8"><!-- post shower -->
		<h1>Blog Post ></h1>
		<p>
		  <strong>Title: </strong>
		  <%= @post.title %>
		</p>
		 
		<p>
		  <strong>Author:</strong>
		  <%= @post.user.email %>
		</p>
	
		<p>
		  <strong> > </strong>
		  <%= @post.body %>
		</p>
		<p>
		  <%= image_tag(@post.image, width:"200px") %>
		</p>

	</div>
<div class = "col-md-4">
	<!-- Comment shower -->
	<h3>Comments</h3>
	<%= render @post.comments %>
	
	
	<!-- comment adder -->
	
	<h2>Add a comment:</h2>
	<%= render 'comments/form' %>
</div>