<div <% if comment.user == current_user %> style="background-color:lightgray" <%end%> >
<p>
  <strong>Commenter:</strong>
  <%= comment.user.email %>
</p>

 
<p>
  <strong> >> </strong>
  <%= comment.body %>
</p>
<p>

	<% if (current_user == comment.user || current_user == @post.user) %>
		<%= link_to 'Destroy Comment', [comment.post, comment],
               method: :delete,
               data: { confirm: 'REALLY?' } %>
    <% end %>
    <hr>

</p>
</div>



